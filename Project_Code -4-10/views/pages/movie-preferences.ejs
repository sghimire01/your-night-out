<!-- Used https://redstapler.co/rpg-style-card-design-with-hover-effect-html-css-tutorial/#comments as reference for card designs -->
<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Movie preferences</title>
      <meta charset="UTF-8" />
      <link rel="stylesheet" type="text/css" href="styles.css">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
      <style>
        body {
         width: 100vw;
         height: 100vh;
         display: flex; 
         align-items: center;
         justify-content: center;
        }

        .background {
            width: 100vw;
         height: 100vh;
         display: flex; 
         align-items: center;
         justify-content: center;
            background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSjvdiwNl95dOyDDAJ_WdxauEjdjIfHA1ZcVg&usqp=CAU");
            background-repeat: no-repeat;
            background-size: cover;
            overflow: hidden;
        }

        .shade {
			top: 0;
			left: 0;
			width:100%;
			height:100%;
			position: absolute;
			background:rgba(0, 0, 0, 0.7);
		}

        .myDiv h1 {
            color:#fff;
			font-size:50px;
			font-weight: 600;
			position: relative;
            text-align: center;
        }

        .myDiv h3 {
            color: white;
			font-size:22px;
			font-weight: 300;
			margin: 10px;
			position: relative;
            text-align: center;
        }

        .card {
            cursor: pointer;
            margin:30px;
            border-width: none;
        }

        .card-img {
            height:100%;
            width:100%;
            background-size: cover;
        }

        .carousel-indicators {
            bottom: -50px;
        }

        .carousel-control-prev, .carousel-control-next {
            width: 5%;
        }

        .card-title {
            background:white;
            border: 5px solid white;
            border-radius: 5px;
            font-family: 'Roboto', sans-serif;
            font-weight: 900;
            color: black;
            text-transform: uppercase;
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            font-size: 1.5rem;
            transform: translate(-50%, -50%);
        }
        .card:hover {
            transform: scale(1.05);
            /* border-color: rgb(1, 12, 36);
            border-width: 5px; */
        }

        input[type="submit"] {width: 100%;}
        input[type="submit"]:hover { 
            background-color: #4CAF50;
            color: white;
        }

        /* input[type="checkbox"]:checked {
            background-color: green;
            color: white;
        }


        input[type=checkbox].btn-check {
            display:none;
        } */
      </style>
    </head>
    <body>
        <div class="background">
            <div class="shade"></div>
            <div class="myDiv">
                <h1>Movie preferences</h1>
                <h3>Please select at least three options to generate movie theaters near by.</h3>

                <div id="carouselExampleIndicators" class="carousel slide" data-interval="false">
                    <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <form action="/movies/" method="POST">   
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="card-group">
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBEZ5uPg8T1en58VNdHK08U-k6kDyM1igmVg&usqp=CAU" alt="Action card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Action</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="action">
                                        </div> 
                                    </div>   
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqbY4nnWTv7Tx4ds82h45nHSggwMKXTsjLKg&usqp=CAU" alt="Horror card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Horror</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="horror">
                                        </div>  
                                    </div>
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQIXrMx7YAXzEUlZT71Y4b4OpCkUA4X2OIsbQ&usqp=CAU" alt="Drama card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Drama</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="drama">
                                        </div>  
                                    </div>
                                </div>        
                            </div>      
                        </div>
                        <div class="carousel-item">
                            <div class="card-group">
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTzvnSgFiB4EJmTBuTUGr5hoNRgt3pNRkts9A&usqp=CAU" alt="Romance card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Romance</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="romance">
                                        </div> 
                                    </div>
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSE8MAQhi-Ag2PumCxyfpMun4-2ta0j-4pbRQ&usqp=CAU" alt="Comedy card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Comedy</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="comedy">
                                        </div> 
                                    </div>
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://static1.colliderimages.com/wordpress/wp-content/uploads/2020/06/back-to-the-future-2-social-feature.jpg" alt="Scifi card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Scifi</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="scifi">
                                        </div> 
                                    </div>
                                </div>      
                            </div>      
                        </div>
                        <div class="carousel-item">
                            <div class="card-group">
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://static01.nyt.com/images/2020/03/31/arts/television/31xp-tigerking/31xp-tigerking-mediumSquareAt3X.jpg" alt="Documentaries card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Documentaries</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="documentaries">
                                        </div> 
                                    </div>
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://fastly.syfy.com/sites/syfy/files/styles/1200x680/public/2019/07/gettyimages-93262182.jpg?offset-x=0&offset-y=0" alt="Musicals card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Musicals</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="musicals">
                                        </div> 
                                    </div>
                                </div>    
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSX9mB3lx8EQro17ao2mIYSPnA8DqgwIRUrEA&usqp=CAU" alt="Crime card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Crime</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="crime">
                                        </div> 
                                    </div>
                                </div>      
                            </div>      
                        </div>
                        <div class="carousel-item">
                            <div class="card-group">
                                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                                    <img class="card-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTsImkvZC7ifeMHhwrTfcE0bTDvTXEh7R-9rQ&usqp=CAU" alt="Romcom card image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title">Romcom</h5>
                                        <div class="card-footer text-center">
                                            <input type="checkbox" name="data" value="romcom">
                                        </div> 
                                    </div>
                                </div>
                            </div>      
                        </div>        
                    </div>
                    <input type="submit" class="Submit">
                </form>    
                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>  
        </div>      
    </body>
    </html>
