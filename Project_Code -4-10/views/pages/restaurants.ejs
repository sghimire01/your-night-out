<%- include('../partials/header.ejs'); -%>
<body id="body">

<%- include('../partials/nav.ejs'); -%>
    <div class="container">
        <br>
        <br>
        <div class="row">
            <div class="col-8">
                <div>
                <h1 class="display-4">Your Night Out</h1>
                </div>
            </div>
        </div>
    </div>
    <div id="container">
        <div id="choose">
            <h1> Restaurants</h1>
            <br>
            <form name="form2" action="/movie-preferences/" method="POST">
            <%
                let cards = '<div class="card-columns">';
                <!-- Iterate the items object & update the cards variable -->
                data.forEach(function(data){
                cards += '<input type="radio" name="rest_id" value="' + data.place_id + '"><div class="card border-dark mb-3" style="width: 14rem;"><div class="card-header">' + data.name + '</div><div class="card-body"><strong>Rating:</strong><p>' + data.rating + '</p><strong>Phone Number:</strong><p>' + data.formatted_phone_number + '</p><a href="' + data.url + '" class="btn btn-primary">View on Google Maps</a><a href="' + data.website + '" class="btn btn-primary">Visit Website</a></div></div>';
                });
                cards += '</div>';
            %>
            <%- cards %>
            <input type="submit">
            </form>
        </div>
    </div>

