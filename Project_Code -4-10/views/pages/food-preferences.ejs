<%- include('../partials/header2.ejs'); -%>
<body id="body">

<style>
	body {
	 width: 100vw;
	 height: 100vh;
	 display: flex;
	 align-items: center;
	 justify-content: center;
	}

	.background {
			width: 100vw;
	 height: 100vh;
	 display: flex;
	 align-items: center;
	 justify-content: center;
			background-image: url("https://t3.ftcdn.net/jpg/02/52/12/40/360_F_252124067_aCtp9ZD934RboKmjJzkXiwYDL7XkNjpn.jpg");
			background-repeat: no-repeat;
			background-size: cover;
			overflow: hidden;
	}

	.shade {
top: 0;
left: 0;
width:100%;
height:100%;
position: absolute;
background:rgba(0, 0, 0, 0.7);
}

	.myDiv h1 {
			color:#fff;
font-size:50px;
font-weight: 600;
position: relative;
			text-align: center;
	}

	.myDiv h3 {
			color: white;
font-size:22px;
font-weight: 300;
margin: 10px;
position: relative;
			text-align: center;
	}

	.card {
			cursor: pointer;
			margin:30px;
			border-width: none;
	}

	.card-img {
			height:100%;
			width:100%;
			background-size: cover;
	}

	.carousel-indicators {
			bottom: -50px;
	}

	.carousel-control-prev, .carousel-control-next {
			width: 5%;
	}

	.card-title {
			background:white;
			border: 5px solid white;
			border-radius: 5px;
			font-family: 'Roboto', sans-serif;
			font-weight: 900;
			color: black;
			text-transform: uppercase;
			margin: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			font-size: 2rem;
			transform: translate(-50%, -50%);
	}
	.card:hover {
			transform: scale(1.05);
			/* border-color: rgb(1, 12, 36);
			border-width: 5px; */
	}
</style>

